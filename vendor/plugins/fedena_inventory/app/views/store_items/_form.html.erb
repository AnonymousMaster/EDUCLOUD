

<div id="page-yield">

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>

  <div class="box">


   <% form_for(@store_item) do |f| %>

     <%=  error_messages_for:store_item %>

      <div class="label-field-pair">
        <div class="label-container1"><%= "#{t('store')}" %></div>
        <div class="text-input-bg"><%= f.collection_select :store_id, Store.all, :id, :name %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container1"><%= "#{t('item_name')}" %></div>
        <div class="input-container"><%= f.text_field :item_name %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container1"><%= "#{t('quantity')}" %></div>
        <div class="text-input-bg"><%= f.text_field :quantity %></div>
      </div>
     <div class="label-field-pair">
        <div class="label-container1"><%= "#{t('unit_price')}" %></div>
        <div class="text-input-bg"><%= f.text_field :unit_price %></div>
      </div>

      <div class="label-field-pair">
        <div class="label-container1"><%= "#{t('tax')}" %></div>
        <div class="input-container"><%= f.text_field :tax %></div>
      </div>



      <%= submit_tag "", :value => "â–º #{t('save')}", :class => "submit_button" %>

    <% end %>

    <div class="extender"></div>
  </div>
</div>




