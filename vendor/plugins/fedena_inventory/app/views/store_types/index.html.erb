<div class="panel panel-primary" id="content-header">


<div class = "panel-heading">
    <h4> 
      <i class="icon-truck"></i> <i class="icon-archive"> </i>
      Tipos de Inventario | 
      <span><%= t('home') %></span>
    </h4>
  </div>

<div class = "panel-body">
      <div class = "barra-estado">
        <div id="app-back-button">
          <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
        </div>
      </div>

<div id="inner-tab-menu"></div>

<div class="bread_crumb">
      <%= link_to "#{t('inventory')}",:controller=>"inventories",:action=>"index" %> &raquo; 
      <%= t('types') %>
</div>



  <div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
  <% end %>
     <% form_for(@store_type) do |f| %>
      <%=  error_messages_for :store_type %>

<div class = "row">
      <div class="col-md-6 form-group">
        <div class="label-container1"><%= "#{t('name')}" %></div>
        <div><%= f.text_field :name ,  :class => 'form-control input-sm' %></div>
      </div>

      <div class="col-md-6 form-group">
        <div class="label-container1"><%= "#{t('code')}" %></div>
        <div><%= f.text_field :code ,  :class => 'form-control input-sm' %></div>
      </div>


 <div class="col-md-6 form-group">
        <%= submit_tag "", :value => "â–º #{t('save')}", :class => "btn btn-primary" %>
  </div>
      <% end %>

  <div class="extender"></div>

</div>


  <div class="box">
  

    <ul id="category-list">
 <% unless @store_types.empty? %>
      <li class="listheading"><div class="category-name"><%= "#{t('store types')}" %></div></li>
      <% @store_types.each do |store| %>
        <li class="list<%=cycle('odd', 'even')%>">
          <div class="category-name"><%= link_to store.name,  edit_store_type_path(store) if permitted_to? :edit, :store_types %></div>
          <div class="category-code"><%=  store.code %></div>
          <div class="category-delete"><%= link_to(t('delete_text'), store_type_path(store), :method => 'delete', :confirm => "#{t('delete_confirm_msg')}") if permitted_to? :destroy, :store_types %></div>
        </li>
      <% end %>
  <% end %>
    </ul>
    <div class="extender"></div>
  </div>
</div>


</div>

</div>
