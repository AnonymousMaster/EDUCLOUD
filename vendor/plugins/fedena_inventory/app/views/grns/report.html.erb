
<div id="content-header">
  <%= image_tag("/images/show_finance.png") %>
  <h1><%= t('inventory') %></h1>
  <h3><%= t('transaction_report') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>


<div id="page-yield">
  <% total =0 %>

  <b id="fees_report_title"><%= t('inventory_transaction_report')  %></b>
  <div id="fees-table">
    <div class="fees-th">
      <div class="fees-table-payee"><%= t('category') %></div>
      <div class="fees-table-category"><%= t('description') %></div>
      <div class="fees-table-date"><%= t('date_text') %></div>
      <div class="fees-table-reciept"><%= t('reciept') %></div>
      <div class="fees-table-amount"><%= t('amount') %></div>
    </div>
    <% total_net_amount = 0 %>
    <% @inventory_transactions.each do |t| %>
      <div class="list<%=cycle('odd', 'even')%>">     
        <div class="fees-table-payee"><%= link_to t.title, :action=> 'report_detail', :id=>t.finance_id  %></div>
        <div class="fees-table-category"><%= t.finance_type  %></div>
        <div class="fees-table-date"> <%= t.transaction_date.strftime('%m%B%Y') %> </div>
        <div class="fees-table-reciept"><%= t.receipt_no %></div>
        <div class="fees-table-amount"><%= t.amount %> </div>
    
        <% total_net_amount += t.amount %>
      </div>
    <% end %>
    <br/>
    <div class="fees-th">
      <div class="fees-table-total-name"><%= t('total_fees') %>:</div>
      <div class="fees-table-category"></div>
      <div class="fees-table-total-amount"><%= total_net_amount %></div>
    </div>
  </div>
</div>

