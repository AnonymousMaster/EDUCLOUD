

<div class="fields" >


   <table id="listing" align="center" width="100%" cellpadding="1" cellspacing="1">


      <%= image_tag("loader.gif",:align => "absmiddle",:border => 0,:id => "loader", :style =>"display: none;" ) %>

          <tr>

        <td class="text-input-bg1" id="person_store_item_id" >
      <%= f.select :store_item_id,
        StoreItem.all.map {|b| [b.item_name , b.id]},
        {:prompt => "#{t('select item')}"},
        {:onChange => "#{remote_function(:url => {:action => "update_item" },
        :with => "'item_id='+value+ '&i='+this.id",
        :before => "Element.show('loader')",
        :success => "Element.hide('loader')"

        )}"} %>
    </td>
    <td class="text-input">  <%= f.text_field :quantity %></td>
    <td class="text-input"><%= f.text_field :unit_price, :class => "nested_qty" %></td>
    <td class="text-input"><%= f.text_field :tax, :value=> 0 %></td>
    <td class="text-input" ><%= calendar_date_select_tag 'grn_item[expiry_date]', I18n.l(Date.today,:format=>:default),
              :year_range => 15.years.ago..5.years.from_now, :readonly=>true,:popup=>"force" %></td>
    <td id="remove"> <%= link_to_remove_fields image_tag("/images/buttons/Delete.png",:border => 0) , f %>
   </td>
   </tr>
   </table>

</div>
