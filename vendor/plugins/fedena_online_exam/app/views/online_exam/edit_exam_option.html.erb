<div id="content-header">
  <%= image_tag("/images/examination/show_exam.png") %>
  <h1><%= t('online_exam_text') %></h1>
  <h3><%= t('edit_option') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>

<div id="page-yield">
  <div id="box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
    <%= error_messages_for 'option' %>
    <%form_for :option do |f| %>

      <div class="option_label_field">
        <p><%= t('option') %></p>
        <div class="label-field-pair2">
          <label><%= t('is_answer') %></label>
          <div class="text-input-bg"><%= f.check_box :is_answer %></div>
        </div>
        <div id="option_text_field_bg"><%= f.tinymce :option %></div>
      </div>
      <div id="submit-button">
        <%=f.submit("â–º #{t('update')}") %>
      </div>
    <% end %>
  </div>
</div>