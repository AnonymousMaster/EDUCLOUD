<div id="content-header">
  <%= image_tag("/images/show_finance.png") %>
  <h1><%= t('instant_fees_text') %></h1>
  <h3><%= t('particular_list') %></h3>
  <div id="app-back-button">
    <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
  </div>
</div>
<div id="inner-tab-menu">
  <ul>
    <li id="particular"><%= link_to_remote "#{t('add_particular')}", :url=> {:controller => 'instant_fees',:action => 'new_category_particular',:id => @instant_fee_category.id} %></li>
  </ul>
</div>
<div id="page-yield">
  <div id="flash_box">
  </div>
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  <div id="list_category_particulars">
    <%= render :partial => 'list_category_particulars' %>
  </div>
  <div id="modal-box" style="display:none;"></div>
  <div id="information"></div>
</div>