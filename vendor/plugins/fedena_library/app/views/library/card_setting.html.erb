<div class="panel panel-primary" id="content-header">


<div class = "panel-heading">
    <h4> 
      <i class="icon-book"></i> <i class="icon-credit-card"> </i>
      <%= "#{t('library_text')}"%> | 
      <span><%= "#{t('library_setting_text')}"%></span>
    </h4>
</div>
 
<div class = "panel-body">
      <div class = "barra-estado">
        <div id="app-back-button">
          <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
        </div>
      </div>


<div id="page-yield">
  <div id="flash-box">
    <% unless flash[:notice].nil? %>
      <p class="flash-msg"> <%= flash[:notice] %> </p>
    <% end %>
  </div>


  <div class="row">
    <div class="col-md-6 form-group">
      <label for="student_course"><%= t('courses_text')%>
        <%= image_tag("loader.gif", :align => "absmiddle", :border => 0, :id => "loader", :style =>"display: none;" ) %>
      </label>

      <div class="text-input-bg">
        <%= select :course, :name,
          Course.active.map {|b| [b.course_name, b.id]},
          {:prompt => "#{t('select_a_course')}"},
          {:onChange => "#{remote_function(:url => {:action => "show_setting"},
          :with => "'course_name='+ value",
          :before => "Element.show('loader')",
          :success => "Element.hide('loader')"
          )}"} %>
      </div>
    </div>
    <div id="card_setting"></div>
    <div id="modal-box" style="display:none;"></div>
  </div>

</div>
</div>
</div>