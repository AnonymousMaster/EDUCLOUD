<div class="panel panel-primary" id="content-header">

<div class = "panel-heading">
    <h4> 
      <i class = "icon-book"></i><i class = "fa-plus-circle"></i>
      <%= "#{t('library_text')}"%> | 
      <span><%= "#{t('add_book')}"%></span>
    </h4>
  </div>


 <div class = "panel-body">
      <div class = "barra-estado">
        <div id="app-back-button">
          <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
        </div>
      </div>

<div id="page-yield">
  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
  
  
  <div class="search_form">
    <%= error_messages_for :book %>

    <% form_for(@book) do |f| %>
<div class = "row">
   <div class="col-md-6 form-group">
        <label for="book_number"><%= "#{t('book_number')}"%><span class="necessary-field">*</span></label>
        <div>
          <%= f.text_field :book_number, :value=>@book_number , :class => 'form-control input-sm' %>
        </div>
    </div>

    <div class="col-md-6 form-group">
        <label for="title"><%= "#{t('title')}"%> <span class="necessary-field">*</span></label>
        <div>
          <%= f.text_field :title, :value=>@book.title||@book_title , :class => 'form-control input-sm'%>
        </div>
    </div>


     <div class="col-md-6 form-group">
        <label for="author"><%= "#{t('author')}"%> <span class="necessary-field">*</span></label>
        <div>
          <%= f.text_field :author, :value=> @book.author||@author , :class => 'form-control input-sm'%>
        </div>
      </div>
     <!-- <div class="extender"></div>
      <div class="tag"> -->
        <div class="col-md-6 form-group">
          <label for="tag"><%= "#{t('tags_text')}"%> <span class="necessary-field">*</span></label>
          <div class="tag_list">
            <div class="label-field-pair-checkbox">
              <% for tag in @tags %>

                <%= check_box_tag "book[tag_list][]", tag.name,  @tagg.include?(tag.name)||@book.tag_list.include?(tag.name),:class=>'right' %> <%= tag.name %>
                <div class="extender"></div>
              <% end %>
            </div>
          </div>
        </div>
</div>



      <div class="extender"></div>
      <div class="extender"></div>
<div class = "row">
      <div class="col-md-6 form-group">
        <label for="title"><%= "#{t('custom_tags')}"%> </label>
        <div>
          <%= text_field_tag "tag[list]" ,@custom_tags , :class => 'form-control input-sm'%>
        </div>
      </div>

      <div class="extender"></div>

      <div class="col-md-6 form-group">
        <label for="no_of_cpoies"><%= "#{t('no_of_copies')}"%> </label>
        <div>
          <%= text_field_tag "tag[count]", @count||1 , :class => 'form-control input-sm'%>
        </div>
      </div>
</div>

       <div class ="form-actions">
      <%= f.submit "#{t('create_text')}",  :class => "btn btn-primary"  %>
      </div>

    <% end %>
  </div>
</div>
</div>
</div>