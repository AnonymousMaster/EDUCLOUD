<div class="content" id="wrapper">

  <div class="row">
   <!-- <%= image_tag current_school_detail.logo.url %> -->
     <img width = "400" alt="Logo EDUITECH" src="/images/application/river.png" style="
    margin-left: auto;
    margin-left: 500px;
    margin-top: 40px;
    margin-bottom: 40px;"
>
  </div>

  <div class ="login-box">

    <% if @network_state.config_value.to_s == "Online" %>
      
    <div id="login_area">
        <% form_for :reset_password do |form| %>
      <div class = "row">
              <div class="col-md-6 form-group">
             <label><%= t('enter_email') %></label>
              </div>
              <div class="co-md-6 form-group">
                <%= form.text_field :username, 
                   :class => 'form-control input-sm'  %>
              </div>
        </div>

      <div class="form-actions">
        <%= submit_tag "#{t('submit')}" , :class => "submit" , :class => "btn btn-primary" %>
       </div>

        <% if !flash.empty? %>
          <%= "<div class='alert alert-danger' id=\"notice\">" + flash[:notice] + "</div>" %>
        <% end %>

      <% end %>
    <% else %>
      <div id="login_area_bg">
        <div id="login_area">
          <label class="offline"><%= t('contact_admin') %>.</label>
        </div>
      </div>
    <% end %>
  </div>

    <div id="help_forgot_pw"><div id="footer_links">&nbsp;</div>
    </div>


  </div>

</div>
