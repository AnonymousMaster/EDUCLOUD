<div class="panel panel-primary" id="content-header">

<div class = "panel-heading">
    <h4> 
      <i class = "icon-male"></i>
      <%= t('create_user') %> | 
      <span><%= t('make_new_admin_user') %></span>
    </h4>
  </div>

<div class = "panel-body">
      <div class = "barra-estado">
        <div id="app-back-button">
          <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
        </div>
      </div>

<div id="page-yield">

  <% unless flash[:notice].nil? %> <p class="flash-msg"> <%= flash[:notice] %> </p> <% end %>

  <% form_for :user do |f| %>

    <%= f.error_messages %>

<div id="create_user_form">
<!-- CREACION DE NUEVOS USUARIOS -->
  <div class = "row">
      <div class="col-md-6 form-group">
      <%= t('legend1') %> <span class="necessary-field">*</span> <%= t('legend2') %>  (<%= t('only_admin_user_can_created') %>)
      </div>
  </div>

<div class = "row">
     <div class="col-md-6 form-group">
        <label for="user_username"><%= t('username') %><span class="necessary-field">*</span></label>
        <div><%= f.text_field :username , :class => 'form-control input-sm'%></div>
      </div>

      <div class="col-md-6 form-group">
        <label for="user_first_name"><%= t('first_name') %><span class="necessary-field">*</span></label>
        <div><%= f.text_field :first_name , :class => 'form-control input-sm'%></div>
      </div>
</div>
<div class = "row">
      <div class="col-md-6 form-group">
        <label for="user_last_name"><%= t('last_name') %></label>
        <div><%= f.text_field :last_name , :class => 'form-control input-sm'%></div>
      </div>

      <div class="col-md-6 form-group">
        <label for="user_password"><%= t('password') %> <span class="necessary-field">*</span></label>
        <div><%= f.password_field :password , :class => 'form-control input-sm'%></div>
      </div>
</div>

<div class = "row">
    <div class="col-md-6 form-group">
        <label for="user_email"><%= t('email') %> <span class="necessary-field">*</span></label>
        <div><%= f.text_field :email , :class => 'form-control input-sm'%></div>
      </div>
</div>

      <%= f.hidden_field :role, :value=>'Admin' %>
      <div class="extender"></div>

<div class="form-actions">
      <%= submit_tag "", :value => "â–º#{t('create_text')}", :class => "user_submit_button" , :class => "btn btn-primary" %>
</div>

    </div>

  <% end  %>

</div>
</div>
</div>