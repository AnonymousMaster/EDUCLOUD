<div class = "content" id="wrapper">
  <div id="top_logo">
   <!-- <%= image_tag current_school_detail.logo.url %>-->
   <img width = "300" weight = "400" alt="Logo EDUITECH" src="/images/application/river.png">
  </div>

  <div class = "login-box" >

    <% form_for :user do |form| %>

      <div id="login_area">
        <div class = "form-group">
          <label for="username"><%= t('username') %></label>
          <div id="username_textbox_bg">
            <%= form.text_field :username,
              :maxlength => 40,
              :class => 'form-control'%>
          </div>
        </div>
        <div class = "form-group">
          <label for="password"><%= t('password') %></label>
          <div id="password_textbox_bg">
            <%= form.password_field :password,
            :class => 'form-control' %>
          </div>
        </div> 
       
          <div  style = "font-size: 12px;">
            <% if !flash.empty? %>
              <div class = "alert alert-danger" ><%= flash[:notice] %></div>
            <% end %>
          </div>

        <div id="submit_area">
          <%= submit_tag t('login'), :class => "btn btn-primary form-control" %>
        </div>

          <label for="forgot_password" style = "padding-top: 20px;" class='contra'>
            <%= link_to t('forgot_password'),
              :controller => "user",
              :action => "forgot_password"
               %>
          </label>



      </div>
    </div>
  <% end %>
  <div id="help_forgot_pw">

  </div>

</div>

