<% content_for :head do %>
  <script type="text/javascript">
    document.observe("dom:loaded", function() {
      hide_or_show_fields('single');
    });
    function hide_or_show_fields(value){
      if(value == 'single'){
        $$('.hide-on-single').each(function (elem){
          elem.hide();
        });
      }
      else{
        $$('.hide-on-single').each(function (elem){
          elem.show();
        });
      }
    }

  </script>
<% end %>