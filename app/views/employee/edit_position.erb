<div class="panel panel-primary" id="content-header">

<div class = "panel-heading">
    <h4> 
      <i class="icon-group"></i> <i class="fa-sort-amount-asc"> </i>
     <%= "#{t('employee_settings')}" %> | 
      <span><%= "#{t('edit_position')}" %></span>
    </h4>
</div>


<div class = "panel-body">
      <div class = "barra-estado">
        <div id="app-back-button">
          <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
        </div>
      </div>

<div id="page-yield">

  <%- form_for :position do |c| -%>

  <% unless flash[:notice].nil? %>
    <p class="flash-msg"> <%= flash[:notice] %> </p>
  <% end %>
    <% unless flash[:warn_notice].nil? %>
    <div id="errorExplanation" class="errorExplanation"><%= flash[:warn_notice] %> </div>
  <% end %>

    <%= error_messages_for 'position' %>
 <div class = "row">
    <div class="col-md-6 form-group">
      <label for="position_name"><%= t('name') %></label>
      <div> <%= c.text_field :name , :class => 'form-control input-sm'%> </div>
    </div>

   <div class="col-md-6 form-group">
      <label for="category_name"><%= "#{t('employee_category')}" %></label>
      <div><%= select :position, :employee_category_id, @categories.map {|s| [s.name, s.id]}, :prompt => "#{t('layouts.default.select')}" %></div>
    </div>

    <div class="col-md-6 form-group">
      <label class="status" for="status"><%= t('status') %></label>
      <div id="radio-buttons">
      <%= c.radio_button  "status", "true", :checked => "checked" %>
      <label class="label_for_status" for="add_grade_status_true"><%= t('active') %></label>

      <%= c.radio_button  "status", "false" %>
      <label class="label_for_status" for="add_grade_status_false"><%= t('inactive') %></label>
      </div>
    </div>
</div>

     <div class ="form-actions">
      <%=  submit_tag("â–º #{t('update')}") %>
    </div>

    </div>

  <%- end -%>


</div>
</div>
</div>