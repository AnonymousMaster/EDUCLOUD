<div class="panel panel-primary" id="content-header">

<div class = "panel-heading">
    <h4> 
      <i class = "icon-user"></i><i class = "icon-comments"></i><i class = "icon-facebook"></i>
      <%= t('students') %> | 
      <span><%= t('send_email') %></span>
    </h4>
  </div>

  <div class = "panel-body">
      <div class = "barra-estado">
        <div id="app-back-button">
          <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
        </div>
      </div>

<div id="page-yield">

  <div id="student_profile_heading">


    <div id="student_main_info">
      <span class="name"> <%= @student.full_name %>  </span>
      <span class="course"><%= t('course_and_batch') %>:<%= @student.batch.full_name %> </span>
      <span class="adm"><%= t('adm_no') %> : <%= @student.admission_no %> </span>
    </div>

    <div class="extender"> </div>

  </div>


  <% form_for :email do |f| %>

<div class="row">
 <div class="col-md-6 form-group">
      <label for="email_subject"><%= t('subject') %></label>
      <div><%= f.text_field 'subject' , :class => 'form-control input-sm'%></div>
    </div>
</div>

 <div class="row">
 <div class="col-md-6 form-group">
      <label for="email_recipients"><%= t('recipients') %></label>
      <div><%= select 'email', 'recipients', [["#{t('student_text')}","Student"], ["#{t('guardian')}","Guardian"], ["#{t('student_text')} & #{t('guardian')}","Student & Guardian"]] , :class => 'form-control input-sm'%></div>
    </div>
</div>

<div class="row">
    <div class="message-area">
      <br/>
      <label for="email_message"><%= t('message') %></label>
      <%= f.text_area 'message' , :class => 'form-control input-sm' %>
    </div>
</div>

    <div class="form-actions">
      <%= submit_tag '' , :value => "â–º#{t('create_text')}" , :class => "btn btn-primary" %>
    </div>

  <% end %>

</div>
</div>
</div>