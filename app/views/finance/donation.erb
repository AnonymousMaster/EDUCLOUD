<div class="panel panel-primary" id="content-header">


  <div class = "panel-heading">
    <h4> 
      <i class = "icon-credit-card"></i>
      <%= t('donations') %> | 
      <span><%= t('add_new_donation') %></span>
    </h4>
  </div>

  <div class = "panel-body">
      <div class = "barra-estado">
        <div id="app-back-button">
          <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
        </div>
      </div>

<div id="inner-tab-menu">
  <ul>
    <li><%= link_to "#{t('donors')}", :action => "donors" %></li>
  </ul>
</div>
<div id="page-yield">
  <% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>
  <div class="box">
    <%= error_messages_for :donation %>
    <% form_for :donation do |f| %>

      <div id="create_user_form">

 <div class = "row">    
    <div class="col-md-6 form-group">
          <label for="donor_name"><%= t('donor_name') %>:</label>
          <div><%= f.text_field :donor , :class => 'form-control input-sm' %></div>
        </div>

       <div class="col-md-6 form-group">
          <label for="description"><%= t('description') %>:</label>
          <div><%= f.text_field :description , :class => 'form-control input-sm' %></div>
        </div>
</div>

<div class = "row">    
    <div class="col-md-6 form-group">
          <label for="description"><%= t('transaction_date') %>:</label>
          <div class="text-field-bg"><%= calendar_date_select_tag 'donation[transaction_date]', I18n.l(Date.today,:format=>:default), :year_range => 5.years.ago..0.years.ago %></div>
        </div>

    <div class="col-md-6 form-group">
          <label for="amount"><%= t('amount') %>:</label>
          <div><%= f.text_field :amount , :class => 'form-control input-sm' %></div>
        </div>
</div>


      <div class="form-actions">
        <%=  submit_tag "â–º #{t('add')}",:class=>'submit_button' , :class => "btn btn-primary"  %>
      </div>


    <% end %>

  </div>
</div>
</div>
</div>