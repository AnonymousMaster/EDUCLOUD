<div class="panel panel-primary" id="content-header">

<div class = "panel-heading">
    <h4> 
      <i class = "icon-money"></i> <i class = "icon-exchange"></i>
      <%= t('finance_transactions') %> | 
      <span><%= t('expences_n_income') %></span>
    </h4>
  </div>

  <div class = "panel-body">
      <div class = "barra-estado">
        <div id="app-back-button">
          <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
        </div>
      </div>



<div id="page-yield">
<% unless flash[:notice].nil? %><p class="flash-msg"><%= flash[:notice] %></p><% end %>

<div class="box">
  <div class="link-box">
    <div class="link-heading"><%= link_to "#{t('add_expense')}", :action => "expense_create" %></div>
    <div class="link-descr"><%= t('create_new_expense') %></div>
  </div>
  <div class="link-box">
    <div class="link-heading"><%= link_to "#{t('add_income')}", :action => "income_create" %></div>
    <div class="link-descr"><%= t('create_new_income') %></div>
  </div>

  <div class="link-box">
    <div class="link-heading"><%= link_to "#{t('report')}", :action => "monthly_report" %></div>
    <div class="link-descr"><%= t('show_transactions') %></div>
  </div>
  <div class="link-box">
    <div class="link-heading"><%= link_to "#{t('compare_transactions')}", :action => "compare_report" %></div>
    <div class="link-descr"><%= t('compare_transactions') %></div>
  </div>

</div>
</div>
</div>
</div>