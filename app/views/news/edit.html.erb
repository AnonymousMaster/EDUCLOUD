<div class="panel panel-primary" id="content-header">

<div class = "panel-heading">
    <h4> 
      <i class = "icon-rss"></i>
      <%= t('news_text') %> | 
      <span><%= t('read_news') %></span>
    </h4>
  </div>

<div class = "panel-body">
      <div class = "barra-estado">
        <div id="app-back-button">
          <%= link_to_function image_tag("/images/buttons/back.png",:border => 0), "history.back()" %>
        </div>
      </div>

<div id="page-yield">

  <% unless flash[:notice].nil? %><p class="flash-msg"> <%= flash[:notice] %> </p><% end %>

  <% form_for :news do |f| %>

    <%= error_messages_for :news %>

    <div id="add_news_form">
      <div class="news_label_field">
        <label for="news_title"><%= t('title') %></label>
        <div class="col-md-12">
        <%= f.text_field :title, :value => @news.title , :class => 'form-control input-sm' %>
        </div>
      </div>

      <div class="news_label_field">
        <label for="news_content"><%= t('content') %></label>
        <div id="news_content_text_field_bg"><%= fckeditor_textarea :news, :content, :value => @news.content %></div>
      </div>
    </div>

    <div class="form-actions">
      <%= submit_tag "", :value => "â–º #{t('update')}", :class => "btn btn-primary" %>
    </div>
    
  <% end %>
</div>
</div>
</div>